{
  "name": "@estavadormir/purr-ui",
  "private": false,
  "version": "0.2.2",
  "type": "module",
  "description": "A modern, accessible React component library with TailwindCSS styling",
  "keywords": [
    "react",
    "components",
    "tailwindcss",
    "typescript",
    "ui",
    "storybook"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/estavadormir/purr-ui.git"
  },
  "homepage": "https://estavadormir.github.io/purr-ui",
  "bugs": {
    "url": "https://github.com/estavadormir/purr-ui/issues"
  },
  "author": "Andre <andrelikescomputers@gmail.com>",
  "license": "MIT",
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.esm.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js"
    },
    "./styles": "./dist/purr-ui.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "pnpm build:types && pnpm build:lib",
    "build:lib": "vite build --config vite.config.lib.ts",
    "build:types": "tsc --project tsconfig.lib.json",
    "lint": "eslint .",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "vitest --config vitest.config.unit.ts",
    "test:unit": "vitest --config vitest.config.unit.ts --run",
    "test:unit:watch": "vitest --config vitest.config.unit.ts",
    "test:coverage": "vitest --config vitest.config.unit.ts --coverage",
    "test:storybook": "vitest --project=storybook --run",
    "test:all": "pnpm test:unit && pnpm test:storybook",
    "prepublishOnly": "pnpm test:unit && pnpm build"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "lucide-react": "^0.544.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-icons": "^5.5.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@eslint/js": "^9.36.0",
    "@storybook/addon-a11y": "^9.1.8",
    "@storybook/addon-docs": "^9.1.8",
    "@storybook/addon-onboarding": "^9.1.8",
    "@storybook/addon-vitest": "^9.1.8",
    "@storybook/react-vite": "^9.1.8",
    "@storybook/test": "^8.6.14",
    "@tailwindcss/vite": "^4.1.13",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-storybook": "^9.1.8",
    "glob": "^11.0.3",
    "globals": "^16.4.0",
    "happy-dom": "^18.0.1",
    "jsdom": "^27.0.0",
    "storybook": "^9.1.8",
    "tailwindcss": "^4.1.13",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.7",
    "vitest": "^3.2.4"
  }
}
